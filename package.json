{
  "name": "example_nest.js",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --tsc --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:detail": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json",
    "test:e2e-watch": "jest --config ./apps/api/test/jest-e2e.json --watchAll"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/microservices": "^9.4.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/sequelize": "^10.0.0",
    "@nestjs/swagger": "^7.0.10",
    "@nestjs/terminus": "^10.0.1",
    "@nestjs/throttler": "^4.2.1",
    "amqp-connection-manager": "^4.1.13",
    "amqplib": "^0.10.3",
    "argon2": "^0.30.3",
    "axios": "^1.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "nanoid": "^3.3.6",
    "node-telegram-bot-api": "^0.61.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/node-telegram-bot-api": "^0.61.6",
    "@types/passport-jwt": "^3.0.8",
    "@types/sequelize": "^4.28.15",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/*.d.ts",
      "!**/libs/shared/src/utils/**",
      "!**/libs/shared/src/modules/**",
      "!**/libs/shared/src/interfaces/**",
      "!**/apps/api/src/*.module.ts",
      "!**/apps/api/src/main.ts",
      "!**/apps/api/src/common/**",
      "!**/apps/api/src/config/**",
      "!**/apps/api/src/dto/**",
      "!**/apps/auth/src/*.module.ts",
      "!**/apps/auth/src/main.ts",
      "!**/apps/auth/src/config/**",
      "!**/apps/user/src/*.module.ts",
      "!**/apps/user/src/main.ts",
      "!**/apps/telegram-bot/src/*.module.ts",
      "!**/apps/telegram-bot/src/main.ts",
      "!**/apps/publication/src/*.module.ts",
      "!**/apps/publication/src/main.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@app/auth/(.*)": "<rootDir>/apps/auth/src/$1",
      "^@app/user/(.*)": "<rootDir>/apps/user/src/$1",
      "^@app/telegram/(.*)": "<rootDir>/apps/telegram-bot/src/$1",
      "^@app/publication/(.*)": "<rootDir>/apps/publication/src/$1"
    }
  }
}
